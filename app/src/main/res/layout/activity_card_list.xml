<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#29292A"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/header_background"
        android:text="Accounts International "
        android:textAlignment="center"
        android:textColor="#FEFFFF"
        android:textColorHint="#DB0000"
        android:textSize="34sp" />

    <ListView
        android:id="@+id/listViewCards"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:drawable/bottom_bar" /> <!-- Use 0dp height to work with layout_weight -->

    <Button
        android:id="@+id/buttonCreateCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#0066FF"
        android:text="Create Card" />

    <Button
        android:id="@+id/buttonTransfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#0066FF"
        android:text="Transfer" />
</LinearLayout>
