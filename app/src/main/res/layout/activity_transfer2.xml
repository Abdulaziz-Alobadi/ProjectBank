<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161622"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/card22"
        android:layout_marginBottom="16dp" /> <!-- Added margin for spacing -->

    <Spinner
        android:id="@+id/spinnerFromCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputrest"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" /> <!-- Added margin for spacing -->

    <Spinner
        android:id="@+id/spinnerToCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputrest"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" /> <!-- Added margin for spacing -->

    <EditText
        android:textColorHint="@color/black"
        android:id="@+id/editTextAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputrest"
        android:hint="Amount"
        android:textColor="@android:color/black"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp" /> <!-- Added margin for spacing -->

    <Button
        android:id="@+id/buttonTransfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transfer Money"
        android:textColor="@android:color/white"
        android:backgroundTint="#0066FF" />

</LinearLayout>
